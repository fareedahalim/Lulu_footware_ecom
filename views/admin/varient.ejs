<%- include("../../views/partials/admin/header") %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title" style="color: rgb(10, 109, 170); text-align: center;">Product Variants</h2>
                    <h5>
                        <a href="/admin/add-varient/<%= variants[0].productId %>" class="btn btn-primary blue-button" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px; text-decoration: none; font-size: 16px;">Add New Variant</a>
                    </h5>
                    <br><br>
                    <table class="table table-hover" style="text-align: center; border-collapse: collapse; width: 100%;">
                        <thead>
                            <tr style="background-color: #f6c2c2; color: rgb(27, 26, 26);">
                                <th style="border: 1px solid #ddd; padding: 8px; font-weight: bold;">Size</th>
                                <th style="border: 1px solid #ddd; padding: 8px; font-weight: bold;">Color</th>
                                <th style="border: 1px solid #ddd; padding: 8px; font-weight: bold;">Price</th>
                                <th style="border: 1px solid #ddd; padding: 8px; font-weight: bold;">Stock</th>
                                <th style="border: 1px solid #ddd; padding: 8px; font-weight: bold;">Images</th>
                                <th style="border: 1px solid #ddd; padding: 8px; font-weight: bold;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% variants.forEach(function(variant) { %>
                                <tr>
                                    <td style="border: 1px solid #ddd; padding: 8px;"><%= variant.size %></td>
                                    <td style="border: 1px solid #ddd; padding: 8px;"><%= variant.color %></td>
                                    <td style="border: 1px solid #ddd; padding: 8px;"><%= variant.price %></td>
                                    <td style="border: 1px solid #ddd; padding: 8px;"><%= variant.stock %></td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <% if (variant.images && variant.images.length > 0) { %>
                                            <% variant.images.forEach(function(image, index) { %>
                                                <img style="height: 50px; width: 50px;" src="<%= image %>" alt="Image <%= index + 1 %>" class="image-preview" >
                                            <% }); %>
                                        <% } else { %>
                                            <span>No images uploaded</span>
                                        <% } %>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <a href="/admin/edit-variant/<%= variant._id %>" class="btn btn-primary">Edit</a>
                                        <form action="/admin/delete-variant/<%= variant._id %>" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <br><br>
                    <a href="/admin" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px; border: 2px solid #000; font-size: 10px; text-decoration: none; display: inline-block;">Back To Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(variantId) {
    Swal.fire({
        title: 'Are you sure?',
        text: 'Are you sure you want to delete this variant?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {
            document.getElementById('deleteForm_' + variantId).submit();
        }
    });
    return false;
}
</script>

<%- include("../../views/partials/admin/footer") %>
