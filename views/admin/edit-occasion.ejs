<%- include("../../views/partials/admin/header") %>

<div class="main-panel">
    
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title" style="color: rgb(10, 109, 170); text-align: center;">Edit Occasion</h2>
                    
                    <form  id="edit_occasion">
                        <div class="form-group">
                            <label for="categoryName">Occasion Name</label>
                            <input type="text" name="categoryName" id="categoryName" value="<%= occasion.categoryName %>" class="form-control" placeholder="Enter occasion name">
                            <span id="categoryNameError" class="error"></span>
                        </div>
                        <% if (typeof message !== 'undefined') { %>
                            <div class="alert alert-danger">
                                <%= message %>
                            </div>
                        <% } %>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                    
                    <br>
                    <a href="/admin/occasion" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px; border: 2px solid #000; text-decoration: none;">Back To Occasion</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("edit_occasion").addEventListener("submit", async function(event) {
    event.preventDefault(); 
    const categoryName = document.getElementById("categoryName").value.trim();
    const categoryNameError = document.getElementById("categoryNameError");
    categoryNameError.innerText = "";

    if (categoryName === "") {
        categoryNameError.innerText = "Occasion name is required";
        return;
    }

    if (!/^[A-Za-z\s]+$/.test(categoryName)) {
        categoryNameError.innerText = "Occasion name must be alphabetic characters only";
        return;
    }

    const formData = new FormData(this); 

    try {
        const response = await fetch('/admin/edit-occasion/<%= occasion._id %>', {
            method: 'POST',
            headers:{
                'Content-Type':'application/json'
            },
            body: JSON.stringify({categoryName}),
        });

        const result = await response.json(); 

        if (response.ok) {
            window.location.href = '/admin/occasion'; 
        } else {
            const errorElement = document.querySelector('.alert');
            if (errorElement) {
                errorElement.textContent = result.message; 
            }
        }
    } catch (error) {
        console.error('Error:', error);
        const errorElement = document.querySelector('.alert');
        if (errorElement) {
            errorElement.textContent = 'An error occurred. Please try again.'; 
        }
    }
});







</script>

