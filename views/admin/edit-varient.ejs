<%- include("../../views/partials/admin/header") %>

<style>
    /* Reuse the styles from addVarient.ejs */
    .main-panel {
        background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRUZTqYvv38DZhhKiWQ4qEMiQpvB8S2zfRNp-DPYG8v-JrQqLl5_lcnD_-b8oozMh5D9Yw&usqp=CAU');
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        padding-top: 20px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.9);
    }

    .card-title {
        color: rgb(10, 109, 170);
        text-align: center;
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 24px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        color: #333;
    }

    .form-group input,
    .form-group select {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        width: 100%;
        box-sizing: border-box;
    }

    .form-group input:focus,
    .form-group select:focus {
        border-color: rgb(10, 109, 170);
        outline: none;
        box-shadow: 0 0 5px rgba(10, 109, 170, 0.5);
    }

    .btn-primary {
        background-color: rgb(10, 109, 170);
        border-color: rgb(10, 109, 170);
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.3s;
        border-radius: 5px;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: rgb(8, 88, 137);
        transform: translateY(-2px);
    }

    .error-message {
        color: red;
        font-size: 12px;
    }

    .image-preview {
        max-width: 100px;
        max-height: 100px;
        margin-bottom: 10px;
        display: block;
    }

    .btn {
        margin-top: 10px;
        display: inline-block;
        text-align: center;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .content-wrapper {
        padding: 40px;
    }

    #cropperModal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        position: relative;
    }

    #imageToCrop {
        max-width: 100%;
        max-height: 500px;
    }
</style>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Edit Product Variant</h2>

                    <form action="/admin/edit-varient/<%= varient._id %>" method="POST" 
                        id="edit_varient_form" onsubmit="return varientValidation(event)">
                         
                        <div class="form-group">
                            <label for="stock">Stock</label>
                            <input type="number" name="stock" id="stock" value="<%= varient.stock %>" placeholder="Enter stock">
                            <p id="stockError" class="error-message"></p>
                        </div>

                        <div class="form-group">
                            <label for="color">Color</label>
                            <input type="text" name="color" id="color" class="form-control"
                                value="<%= varient.color %>" placeholder="Enter color">
                            <p id="colorError" class="error-message"></p>
                        </div>

                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="number" name="price" id="price" value="<%= varient.price %>" placeholder="Enter price">
                            <p id="priceError" class="error-message"></p>
                        </div>

                        <div class="form-group">
                            <label for="size">Size</label>
                            <input type="number" name="size" id="size" value="<%= varient.size %>" placeholder="Enter size">
                            <p id="sizeError" class="error-message"></p>
                        </div>

                        
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>

                  

                    <br>
                    <a href="/admin/products" class="btn btn-secondary">Back to Products</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>


    // Reuse the JavaScript functions from addVarient.ejs
   
    function varientValidation(event) {
        // Prevent form submission
        event.preventDefault();

        // Get form elements
        const stock = document.getElementById('stock').value.trim();
        const color = document.getElementById('color').value.trim();
        const price = document.getElementById('price').value.trim();
        const size = document.getElementById('size').value.trim();

        let isValid = true;

        // Clear previous error messages
        document.getElementById('stockError').innerText = "";
        document.getElementById('colorError').innerText = "";
        document.getElementById('priceError').innerText = "";
        document.getElementById('sizeError').innerText = "";

        // Validate stock (positive integer including zero)
        if (!/^\d+$/.test(stock)) {
            document.getElementById('stockError').innerText = "Stock must be a non-negative integer.";
            isValid = false;
        }

        // Validate color (alphabetic characters only, both upper and lowercase allowed)
        if (!/^[a-zA-Z]+$/.test(color)) {
            document.getElementById('colorError').innerText = "Color must contain only letters.";
            isValid = false;
        }

        // Validate price (positive integer including zero)
        if (!/^\d+$/.test(price)) {
            document.getElementById('priceError').innerText = "Price must be a non-negative integer.";
            isValid = false;
        }

        // Validate size (optional, assuming you want to validate for positive integers as well)
        if (size && !/^\d+$/.test(size)) {
            document.getElementById('sizeError').innerText = "Size must be a non-negative integer if provided.";
            isValid = false;
        }

        // If the form is valid, submit it
        if (isValid) {
            document.getElementById('edit_varient_form').submit();
        }
    }



    function resetErrors() {
        var errorMessages = document.getElementsByClassName('error-message');
        for (var i = 0; i < errorMessages.length; i++) {
            errorMessages[i].innerText = '';
        }
    }

    function previewImage(event, index) {
        // Similar image preview and cropping functionality as in addVarient.ejs
    }

    function removeImage(index) {
        document.getElementById('image' + index).value = '';
        document.getElementById('previewImage' + index).src = '';
        document.getElementById('removeImage' + index).style.display = 'none';
    }
</script>

