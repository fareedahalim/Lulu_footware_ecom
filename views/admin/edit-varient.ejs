<%- include("../../views/partials/admin/header") %>

<style>
   .main-panel {
            background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRUZTqYvv38DZhhKiWQ4qEMiQpvB8S2zfRNp-DPYG8v-JrQqLl5_lcnD_-b8oozMh5D9Yw&usqp=CAU');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            padding-top: 20px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.9);
        }

        .card-title {
            color: rgb(10, 109, 170);
            text-align: center;
            font-weight: 700;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: 600;
            color: #333;
        }

        .form-group input,
        .form-group select {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
        }

        .form-group input:focus,
        .form-group select:focus {
            border-color: rgb(10, 109, 170);
            outline: none;
            box-shadow: 0 0 5px rgba(10, 109, 170, 0.5);
        }

        .btn-primary {
            background-color: rgb(10, 109, 170);
            border-color: rgb(10, 109, 170);
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.3s;
            border-radius: 5px;
            width: 100%;
        }

        .btn-primary:hover {
            background-color: rgb(8, 88, 137);
            transform: translateY(-2px);
        }

        .error-message {
            color: red;
            font-size: 12px;
        }

        .image-preview {
            max-width: 100px;
            max-height: 100px;
            margin-bottom: 10px;
            display: block;
        }

        .btn {
            margin-top: 10px;
            display: inline-block;
            text-align: center;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
            padding: 8px 16px;
            text-decoration: none;
