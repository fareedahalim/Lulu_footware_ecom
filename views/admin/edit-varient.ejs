<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Edit Product Variant</h2>

                    <form action="/admin/edit-varient/<%= varient._id %>" method="POST" enctype="multipart/form-data"
                        id="edit_varient_form" onsubmit="return varientValidation()">
                        <div class="form-group">
                            <label for="stock">Stock</label>
                            <input type="number" name="stock" id="stock" placeholder="Enter stock" value="<%= varient.stock %>">
                            <p id="stockError" class="error-message"></p>
                        </div>

                        <div class="form-group">
                            <label for="color">Color</label>
                            <input type="text" name="color" id="color" class="form-control" placeholder="Enter color" value="<%= varient.color %>">
                            <p id="colorError" class="error-message"></p>
                        </div>

                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="number" name="price" id="price" placeholder="Enter price" value="<%= varient.price %>">
                            <p id="priceError" class="error-message"></p>
                        </div>

                        <div class="form-group">
                            <label for="size">Size</label>
                            <input type="number" name="size" id="size" placeholder="Enter size" value="<%= varient.size %>">
                            <p id="sizeError" class="error-message"></p>
                        </div>

                        <!-- Image preview and upload handling -->
                        <% for (let i = 1; i <= 3; i++) { %>
                        <div class="form-group">
                            <label for="image<%= i %>">Image <%= i %></label>
                            <img id="previewImage<%= i %>" class="image-preview" src="<%= varient.images[i-1] ? varient.images[i-1].url : '' %>" />
                            <input type="file" name="images" id="image<%= i %>" accept="image/*" onchange="previewImage(event, <%= i %>)">
                            <button type="button" id="removeImage<%= i %>" class="btn btn-secondary" style="<%= varient.images[i-1] ? 'display:inline-block;' : 'display:none;' %>" onclick="removeImage(<%= i %>)">Remove</button>
                        </div>
                        <% } %>

                        <button type="submit" class="btn btn-primary">Update Variant</button>
                    </form>

                    <div id="cropperModal" style="display: none;">
                        <div class="modal-content">
                            <img id="imageToCrop" src="" style="max-width: 100%;" />
                            <button id="cropButton" class="btn btn-primary">Crop & Save</button>
                        </div>
                    </div>

                    <br>
                    <a href="/admin/varient" class="btn btn-secondary">Back to Products</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
   function varientValidation() {


var size = document.getElementById('size').value;
var price = document.getElementById('price').value;
var stock = document.getElementById('stock').value;
var color = document.getElementById('color').value;
var image1 = document.getElementById('image1').value;
var image2 = document.getElementById('image2').value;
var image3 = document.getElementById('image3').value;

// Reset previous errors
resetErrors();

var isValid = true;



if (size === '') {
    document.getElementById('sizeError').innerText = 'Please select a size';
    isValid = false;
}

if (price.trim() === '') {
    document.getElementById('priceError').innerText = 'Please enter price';
    isValid = false;
} else if (isNaN(price)) {
    document.getElementById('priceError').innerText = 'Only numbers are allowed';
    isValid = false;
} else if (price <= 0) {
    document.getElementById('priceError').innerText = 'Price should be positive';
    isValid = false;
}


if (stock.trim() === '') {
    document.getElementById('stockError').innerText = 'Please enter stock';
    isValid = false;
} else if (isNaN(stock)) {
    document.getElementById('stockError').innerText = 'Only numbers are allowed';
    isValid = false;
} else if (stock <= 0) {
    document.getElementById('stockError').innerText = 'stock should be positive';
    isValid = false;
}
if (color === '') {
    document.getElementById('colorError').innerText = 'Please enter color';
    isValid = false;
}



if (image1.trim() === '') {
    document.getElementById('image1Error').innerText = 'Please upload image 1';
    isValid = false;
}

if (image2.trim() === '') {
    document.getElementById('image2Error').innerText = 'Please upload image 2';
    isValid = false;
}

if (image3.trim() === '') {
    document.getElementById('image3Error').innerText = 'Please upload image 3';
    isValid = false;
}

return isValid;
}

function resetErrors() {
var errorMessages = document.getElementsByClassName('error-message');
for (var i = 0; i < errorMessages.length; i++) {
    errorMessages[i].innerText = '';
}
}





function previewImage(event, previewId) {
    const file = event.target.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onload = function () {
            const imageElement = document.getElementById('imageToCrop');
            imageElement.src = reader.result;
            imageElement.onload = function () {
                // Initialize Cropper.js on the image
                if (cropper) {
                    cropper.destroy();
                }
                cropper = new Cropper(imageElement, {
                    aspectRatio: 1, // Adjust the aspect ratio as needed
                    viewMode: 1,
                });
                // Show the modal
                document.getElementById('cropperModal').style.display = 'block';
            }
        }
        reader.readAsDataURL(file);
        currentImageInput = event.target;

        // Show the remove button
        const removeButton = document.getElementById(`removeImage${previewId}`);
        removeButton.style.display = 'inline-block';
    }
}


document.getElementById('cropButton').addEventListener('click', function () {
console.log('hi fareeda beegum')
const canvas = cropper.getCroppedCanvas();
const croppedImageDataUrl = canvas.toDataURL('image/jpeg');

// Set the cropped image as the input value
const inputId = currentImageInput.id;
const previewImage = document.getElementById(`previewImage${inputId.replace('image', '')}`);
previewImage.src = croppedImageDataUrl;
previewImage.style.display = 'block';
currentImageInput.value = ''; // Clear the file input

// Hide the modal and destroy the cropper instance
document.getElementById('cropperModal').style.display = 'none';
cropper.destroy();
});

function removeImage(imageNumber) {
const previewImage = document.getElementById(`previewImage${imageNumber}`);
previewImage.src = '';
previewImage.style.display = 'none';
const input = document.getElementById(`image${imageNumber}`);
input.value = ''; // Clear the file input
}
</script>


</script>

