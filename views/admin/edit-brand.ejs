<script>
 
document.getElementById("edit_brand").addEventListener("submit", async function(event) {
    event.preventDefault(); // Prevent the default form submission

    const brandName = document.getElementById("brandName").value.trim();
    const brandNameError = document.getElementById("brandNameError");
    brandNameError.innerText = "";
     alert(brandName)
    if (brandName === "") {
        brandNameError.innerText = "Brand name is required";
        return;
    }

    if (!/^[A-Za-z\s]+$/.test(brandName)) {
        brandNameError.innerText = "Brand name must be alphabetic characters only";
        return;
    }

    const formData = new FormData(this); // Create FormData object from form

    try {
        const response = await fetch('/admin/edit-brand/<%= brand._id %>', {
            method: 'POST',
            headers:{
                'Content-Type':'application/json'
            },
            body: JSON.stringify({brandName}),
        });

        const result = await response.json(); // Parse the JSON response

        if (response.ok) {
            window.location.href = '/admin/brand'; // Redirect to the correct URL
        } else {
            const errorElement = document.querySelector('.alert');
            if (errorElement) {
                errorElement.textContent = result.message; // Show error message
            }
        }
    } catch (error) {
        console.error('Error:', error);
        const errorElement = document.querySelector('.alert');
        if (errorElement) {
            errorElement.textContent = 'An error occurred. Please try again.'; // Show generic error message
        }
    }
});






 </script>

