
   <%- include("../../views/partials/admin/header") %>


<div class="main-panel">
   
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title" style="color: rgb(10, 109, 170); text-align: center;">Edit Brand</h2>
                    
                   
                        <form id="edit_brand">
                       
                            <div class="form-group">
                                <label for="brandName" >Brand name </label>
                                <input type="text" name="brandName" id="brandName"  value="<%=brand.brandName%>"  class="form-control">
                                <span id="brandNameError" class="error"></span>
                            </div>
                            
                         
                            
                            <% if (typeof message !== 'undefined') { %>
                                <div class="alert alert-danger">
                                    <%= message %>
                                </div>
                            <% } %>
                            
                            
                                <button type="submit" class="btn btn-primary blue-button" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px;">Save</button>

                    
                    </form>
                    
                    <br>
                    <a href="/admin/brand" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px; border: 2px solid #000; text-decoration: none;">Back To Brand</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
 
document.getElementById("edit_brand").addEventListener("submit", async function(event) {
    event.preventDefault(); 

    const brandName = document.getElementById("brandName").value.trim();
    const brandNameError = document.getElementById("brandNameError");
    brandNameError.innerText = "";
     alert(brandName)
    if (brandName === "") {
        brandNameError.innerText = "Brand name is required";
        return;
    }

    if (!/^[A-Za-z\s]+$/.test(brandName)) {
        brandNameError.innerText = "Brand name must be alphabetic characters only";
        return;
    }

    const formData = new FormData(this); 

    try {
        const response = await fetch('/admin/edit-brand/<%= brand._id %>', {
            method: 'POST',
            headers:{
                'Content-Type':'application/json'
            },
            body: JSON.stringify({brandName}),
        });

        const result = await response.json(); 

        if (response.ok) {
            window.location.href = '/admin/brand'; 
        } else {
            const errorElement = document.querySelector('.alert');
            if (errorElement) {
                errorElement.textContent = result.message; 
            }
        }
    } catch (error) {
        console.error('Error:', error);
        const errorElement = document.querySelector('.alert');
        if (errorElement) {
            errorElement.textContent = 'An error occurred. Please try again.'; 
        }
    }
});






 </script>

