<%- include("../../views/partials/admin/header") %>

<div class="main-panel">
    <div class="content-wrapper" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRUZTqYvv38DZhhKiWQ4qEMiQpvB8S2zfRNp-DPYG8v-JrQqLl5_lcnD_-b8oozMh5D9Yw&usqp=CAU'); background-size: cover; background-position: center;">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title" style="color: rgb(10, 109, 170); text-align: center;">Add Brand</h2>
                    
                    <form action="/admin/add-brand" method="POST" id="add_user" onsubmit=" brandValidation()">
                        <div class="new_user">
                            <div class="form-group">
                                <label for="brandName" class="text-dark">Brand  </label>
                                <input type="text" name="brandName" id="brandName" class="form-control" placeholder="Enter a brand name">
                                <span id="brandNameError" class="error"></span>
                            </div>
                            
                            <!-- <div class="form-group">
                                <label for="brandName" class="text-dark">Discription </label>
                                <textarea placeholder="Type here" name="description" class="form-control" id="descriptionId" required></textarea>
                                <div id="description-error" class="error-message"></div>
                            </div> -->
                            
                            <% if (typeof message !== 'undefined') { %>
                            <div id="message" class="error">
                                <%= message %>
                            </div>
                            <% } %>
                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary blue-button" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px;">Save</button>
                            </div>
                        </div>
                    </form>
                    
                    <br>
                    <a href="/admin" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px; border: 2px solid #000; text-decoration: none;">Back To Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    
    async function brandValidation() {

        const brandName = document.getElementById("brandName").value.trim();
        const brandNameError = document.getElementById("brandNameError");
        brandNameError.innerText = "";

        if (brandName === "") {
            brandNameError.innerText = "Brand name is required";
            return false;
        }

        if (!/^[A-Za-z\s]+$/.test(brandName)) {
            brandNameError.innerText = "Brand name must be alphabetic characters only";
            return false;
        }

        const isUnique = await checkBrandNameUnique(brandName);
        if (!isUnique) {
            brandNameError.innerText = "Brand name already exists";
            return false;
        }

        return true;
    }

    async function checkBrandNameUnique(brandName) {
        try {
            const response = await fetch('/admin/check-brand-unique', {  // Make sure this path is correct
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ brandName })
            });

            const result = await response.json();
            return result.isUnique;
        } catch (error) {
            console.error('Error checking brand name uniqueness:', error);
            return false;
        }
    }
</script>

