<%- include("../../views/partials/admin/header") %>
<style>
    .error {
        color: red;
        font-size: 0.875rem;
    }
    .main-panel {
        padding: 40px 20px;
        background-color: rgba(0, 0, 0, 0.6);
        border-radius: 10px;
    }
</style>

<div class="main-panel">
   
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title" style="color: rgb(10, 109, 170); text-align: center;">Add Brand</h2>
                    
                    <form id="brandForm">
                        <div class="new_user">
                            <div class="form-group">
                                <label for="brandName" class="text-dark">Brand</label>
                                <input type="text" name="brandName" id="brandName" class="form-control" placeholder="Enter a brand name">
                                <span id="brandNameError" class="error"></span>
                            </div>
                            <% if (locals.message) { %>
                                <div class="alert alert-danger text-center" id="enterUsername">
                                  <%= message %>
                                </div>
                            <% } %>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary blue-button" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px;">Save</button>
                            </div>
                        </div>
                    </form>
                    
                    <br>
                    <a href="/admin" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px; border: 2px solid #000; text-decoration: none;">Back To Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
document.getElementById("brandForm").addEventListener("submit", async function(event) {
    event.preventDefault(); 

    const brandName = document.getElementById("brandName").value.trim();
    const brandNameError = document.getElementById("brandNameError");

    brandNameError.innerText = "";

    if (brandName === "") {
        brandNameError.innerText = "Brand name is required";
        return false;
    }

    if (!/^[A-Za-z\s]+$/.test(brandName)) {
        brandNameError.innerText = "Brand name must contain alphabetic characters only.";
        return false;
    }

    try {
        const response = await fetch('/admin/add-brand', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ brandName })
        });

        const result = await response.json();

        if (!result.success) {
            brandNameError.innerText = result.message;
        } else {
            window.location.href = "/admin/brand";
        }
    } catch (error) {
        console.error("Error submitting the brand:", error);
        brandNameError.innerText = "An error occurred. Please try again.";
    }
});

</script>
<%- include("../../views/partials/admin/footer") %>
