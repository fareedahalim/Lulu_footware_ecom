<%- include("../../views/partials/admin/header") %>
<style>
    .error {
        color: red;
        font-size: 0.875rem;
    }
    .main-panel {
        padding: 40px 20px;
        background-color: rgba(0, 0, 0, 0.6);
        border-radius: 10px;
    }
</style>

<div class="main-panel">
    <!-- Commented out background image -->
    <!-- <div class="content-wrapper" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRUZTqYvv38DZhhKiWQ4qEMiQpvB8S2zfRNp-DPYG8v-JrQqLl5_lcnD_-b8oozMh5D9Yw&usqp=CAU'); background-size: cover; background-position: center;"> -->
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title" style="color: rgb(10, 109, 170); text-align: center;">Add Brand</h2>
                    
                    <form id="brandForm">
                        <div class="new_user">
                            <div class="form-group">
                                <label for="brandName" class="text-dark">Brand</label>
                                <input type="text" name="brandName" id="brandName" class="form-control" placeholder="Enter a brand name">
                                <span id="brandNameError" class="error"></span>
                            </div>
                            <% if (locals.message) { %>
                                <div class="alert alert-danger text-center" id="enterUsername">
                                  <%= message %>
                                </div>
                            <% } %>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary blue-button" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px;">Save</button>
                            </div>
                        </div>
                    </form>
                    
                    <br>
                    <a href="/admin" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px; border: 2px solid #000; text-decoration: none;">Back To Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("brandForm").addEventListener("submit", async function(event) {
        event.preventDefault(); // Prevent the default form submission

        const brandName = document.getElementById("brandName").value.trim();
        const brandNameError = document.getElementById("brandNameError");

        // Clear previous error messages
        brandNameError.innerText = "";

        // Check if the brand name is empty
        if (brandName === "") {
            brandNameError.innerText = "Brand name is required";
            return false;
        }

        // Check if the brand name contains only alphabetic characters
        if (!/^[A-Za-z\s]+$/.test(brandName)) {
            brandNameError.innerText = "Brand name must contain alphabetic characters only.";
            return false;
        }

        // Check if the brand name is unique
        try {
            const response = await fetch('/admin/check-brand-unique', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ brandName })
            });

            const result = await response.json();

            if (!result.isUnique) {
                brandNameError.innerText = "Brand name already exists";
                return false;
            }

            // Submit the form data using fetch API
            const formResponse = await fetch("/admin/add-brand", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ brandName })
            });

            const formResult = await formResponse.json();

            if (!formResult.success) {
                // Display the error message in the frontend
                brandNameError.innerText = formResult.message;
            } else {
                // Redirect to the brand list or show a success message
                window.location.href = "/admin/brands";
            }
        } catch (error) {
            console.error("Error checking brand name uniqueness:", error);
            brandNameError.innerText = "An error occurred while checking brand name uniqueness. Please try again.";
        }
    });
</script>

