<%- include("../../views/partials/admin/header") %>
<div class="page-header">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title" style="color: rgb(10, 109, 170); text-align: center;">
                    Edit Offer<br>
                </h2>
                <br><br>
                <div class="container">
                    <div class="row">
                        <div class="content">
                            <form action="/admin/edit-offer/<%= offer._id %>" method="POST">
                                <div class="form-group">
                                    <label for="offerType" style="font-weight: bold;">Offer Type</label>
                                    <select name="offerType" id="offerType" class="form-control" required>
                                        <option value="product" <%= offer.offerType === 'product' ? 'selected' : '' %>>Product</option>
                                        <option value="brand" <%= offer.offerType === 'brand' ? 'selected' : '' %>>Brand</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="entityId" style="font-weight: bold;">Select Entity</label>
                                    <select name="entityId" id="entityId" class="form-control" required>
                                        <% if (offer.entityType === 'product') { %>
                                            <!-- Show the selected product first -->
                                            <option value="<%= offer.entityId %>" selected><%= offer.entityName %></option>
                                            <% products.forEach(product => { %>
                                                <% if (product._id !== offer.entityId) { %>
                                                    <option value="<%= product._id %>"><%= product.productName %></option>
                                                <% } %>
                                            <% }) %>
                                            <% brands.forEach(brand => { %>
                                                <option value="<%= brand._id %>"><%= brand.brandName %></option>
                                            <% }) %>
                                        <% } else if (offer.entityType === 'brand') { %>
                                            <!-- Show the selected brand first -->
                                            <option value="<%= offer.entityId %>" selected><%= offer.entityName %></option>
                                            <% brands.forEach(brand => { %>
                                                <% if (brand._id !== offer.entityId) { %>
                                                    <option value="<%= brand._id %>"><%= brand.brandName %></option>
                                                <% } %>
                                            <% }) %>
                                            <% products.forEach(product => { %>
                                                <option value="<%= product._id %>"><%= product.productName %></option>
                                            <% }) %>
                                        <% } else { %>
                                            <!-- Default dropdown when no offer is selected -->
                                            <option value="" disabled selected>Select an entity</option>
                                            <% products.forEach(product => { %>
                                                <option value="<%= product._id %>"><%= product.productName %></option>
                                            <% }) %>
                                            <% brands.forEach(brand => { %>
                                                <option value="<%= brand._id %>"><%= brand.brandName %></option>
                                            <% }) %>
                                        <% } %>
                                    </select>
                                    
                                </div>
                                <div class="form-group">
                                    <label for="discountPercentage" style="font-weight: bold;">Discount Percentage</label>
                                    <input type="number" name="discountPercentage" class="form-control" value="<%= offer.discountPercentage %>" placeholder="Enter discount percentage" required>
                                </div>
                                
                                <button type="submit" class="btn" style="background-color: yellow; color: black; padding: 10px 20px; font-size: 16px; cursor: pointer;">
                                    Save Changes
                                </button>
                            </form>
                            <br><br>
                            <a href="/admin/offers" style="background-color: black; color: white; padding: 8px 16px; border-radius: 5px; border: 2px solid #000; font-size: 16px; text-decoration: none; display: inline-block;">Back to Offers</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    
    const products = <%- JSON.stringify(products) %>;
    const brands = <%- JSON.stringify(brands) %>;

    const offerTypeSelect = document.getElementById('offerType');
    const entityIdSelect = document.getElementById('entityId');

    
    function populateEntities(offerType) {
        entityIdSelect.innerHTML = ''; 

        if (offerType === 'product') {
            
            products.forEach(product => {
                const option = document.createElement('option');
                option.value = product._id;
                option.textContent = product.productName;
                entityIdSelect.appendChild(option);
            });
        } else if (offerType === 'brand') {
        
            brands.forEach(brand => {
                const option = document.createElement('option');
                option.value = brand._id;
                option.textContent = brand.brandName;
                entityIdSelect.appendChild(option);
            });
        }
    }

    
    offerTypeSelect.addEventListener('change', function() {
        populateEntities(this.value);
    });

    
    populateEntities(offerTypeSelect.value);
</script>
<%- include("../../views/partials/admin/footer") %>
