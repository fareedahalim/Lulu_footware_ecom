<%- include("../../views/partials/admin/header") %>
<style>
    .error {
        color: red;
        font-size: 0.875rem;
    }
    .main-panel {
        padding: 40px 20px;
        background-color: rgba(0, 0, 0, 0.6);
        border-radius: 10px;
    }
</style>


<div class="main-panel">
    
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title" style="color: rgb(10, 109, 170); text-align: center;">Add Occasion</h2>
                    
                    <form id="categoryForm" >
                        <div class="new_user">
                            <div class="form-group">
                                <label for="categoryName" class="text-dark">Occasions  </label>
                                <input type="text" name="categoryName" id="categoryName" class="form-control" placeholder="Enter a occasion name">
                                <span id="categoryNameError" class="error"></span>
                            </div>
                            <% if (locals.message) { %>
                                <div class="alert alert-danger text-center" id="enterUsername">
                                  <%= message %>
                                </div>
                              <% } %>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary blue-button" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px;">Save</button>
                            </div>
                        </div>
                    </form>
                    
                    <br>
                    <a href="/admin/occasion" style="background-color: rgb(10, 109, 170); color: white; padding: 8px 16px; border-radius: 5px; border: 2px solid #000; text-decoration: none;">Back To occasion</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("categoryForm").addEventListener("submit", async function(event) {
    event.preventDefault();

    const categoryName = document.getElementById("categoryName").value.trim();
    
    
    const categoryNameError = document.getElementById("categoryNameError");

    
    categoryNameError.innerText = "";


    if (categoryName === "") {
        categoryNameError.innerText = "Category name is required";
        return false;
    }

    
    if (!/^[A-Za-z\s]+$/.test(categoryName)) {
        categoryNameError.innerText = "Category name must contain alphabetic characters only.";
        return false;
    }

    
    try {
        
        const response = await fetch("/admin/add-category", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({ categoryName })
        });

        const result = await response.json();

        if (!result.success) {
            
            categoryNameError.innerText = result.message;
        } else {
            
            window.location.href = "/admin/occasion";
        }
    } catch (error) {
        console.error("Error submitting form:", error);
        categoryNameError.innerText = "An error occurred while submitting the form. Please try again.";
    }
});


</script>

<%- include("../../views/partials/admin/footer") %>
