<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <!-- Include Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .timer {
            font-size: 1.2rem;
            font-weight: bold;
            color: #ff0000;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h2 class="text-center">OTP Verification</h2>
                <!-- OTP Verification Form -->
                <form action="/verify-otp" method="POST">
                    <div class="mb-3">
                        <label for="otpInput" class="form-label">Enter OTP</label>
                        <input type="text" class="form-control" id="otpInput" name="otp" placeholder="Enter your OTP" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
                </form>

                <!-- Display OTP Timer -->
                <div id="otp-timer" class="text-center mt-3 timer">OTP expires in <span id="time">05:00</span></div>

                <!-- Resend OTP Button -->
                <form action="/resend-otp" method="POST" id="resend-form" style="display:none;">
                    <input type="hidden" name="email" value="<%= user %>">
                    <button type="submit" class="btn btn-link w-100 mt-3">Resend OTP</button>
                </form>

                <!-- Display error message if OTP is incorrect -->
                <% if (typeof errorMessage !== 'undefined') { %>
                    <div class="alert alert-danger mt-3"><%= errorMessage %></div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        const timerElement = document.getElementById("time");
        const resendForm = document.getElementById("resend-form");
        let timeLeft = 100;  // 5 minutes countdown in seconds

        function startTimer() {
    const timerInterval = setInterval(() => {
        if (timeLeft <= 0) {
            clearInterval(timerInterval);
            timerElement.innerHTML = "00:00";
            resendForm.style.display = "block";  // Show the Resend OTP button
            
            // Disable the OTP input field when time expires
            document.getElementById("otpInput").disabled = true;
        } else {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerElement.innerHTML = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            timeLeft--;
        }
    }, 1000);
}


        window.onload = startTimer;
    </script>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>