input:focus {
  border-color: #007bff;
  box-shadow: 0 0 10px rgba(0, 123, 255, 0.2);
}

button[type="submit"] {
  background-color: #007bff;
  border-color: #007bff;
  color: white;
  padding: 10px 20px;
  border-radius: 25px;
  font-size: 18px;
  font-weight: bold;
  width: 100%;
  transition: background-color 0.3s ease;
}

button[type="submit"]:hover {
  background-color: #0056b3;
}

.google-button {
  display: inline-flex;
  align-items: center;
  padding: 10px 20px;
  border-radius: 25px;
  color: #333;
  border: 1px solid #ddd;
  background-color: white;
  font-weight: bold;
  width: 100%;
  transition: box-shadow 0.3s ease;
}

.google-button img {
  margin-right: 10px;
}

.google-button:hover {
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.alert {
  background-color: #f8d7da;
  color: #721c24;
  padding: 10px;
  border-radius: 8px;
  text-align: center;
  margin-bottom: 20px;
}

.d-flex {
  justify-content: center;
}

